<div class="p-6 hover:bg-base-300/50 transition-colors" id="task_run_<%= task_run.id %>">
  <div class="flex justify-between items-start mb-3">
    <div>
      <div class="flex items-center gap-2">
        <% if task_run.running? %>
          <div class="badge badge-warning gap-2">
            <span class="loading loading-spinner loading-xs"></span>
            Running
          </div>
        <% elsif task_run.completed? %>
          <div class="badge badge-success gap-2">
            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Completed
          </div>
        <% elsif task_run.failed? %>
          <div class="badge badge-error gap-2">
            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            Failed
          </div>
        <% else %>
          <div class="badge badge-ghost"><%= task_run.status.capitalize %></div>
        <% end %>
        <span class="text-sm text-base-content/60">
          <%= task_run.created_at.strftime("%b %d, %H:%M") %>
        </span>
      </div>
      <div class="text-sm text-base-content/60 mt-1">
        Triggered by: <%= task_run.trigger_source %>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <% if task_run.duration_human %>
        <div class="text-sm text-base-content/60">
          Duration: <%= task_run.duration_human %>
        </div>
      <% end %>
      <% if @task %>
        <%= link_to task_task_run_path(@task, task_run), class: "btn btn-ghost btn-sm" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          View
        <% end %>
      <% end %>
    </div>
  </div>

  <% if task_run.output.present? %>
    <div class="mt-3">
      <details class="collapse collapse-arrow bg-base-300 rounded">
        <summary class="collapse-title text-sm font-medium">Output Preview</summary>
        <div class="collapse-content">
          <pre class="text-xs overflow-x-auto whitespace-pre-wrap"><%= truncate(task_run.output, length: 500) %></pre>
        </div>
      </details>
    </div>
  <% end %>
</div>