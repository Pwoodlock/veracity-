<% content_for :head do %>
  <title>Gotify Admin - Server Manager</title>
<% end %>

<%= render 'shared/navigation' %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Admin Navigation Tabs -->
    <div class="mb-6 border-b border-base-content/10">
      <nav class="-mb-px flex space-x-8">
        <%= link_to admin_gotify_path, class: "border-b-2 border-primary py-4 px-1 text-sm font-medium text-primary" do %>
          Dashboard
        <% end %>
        <%= link_to admin_gotify_applications_path, class: "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-base-content/60 hover:text-base-content/80 hover:border-base-content/20" do %>
          Applications
        <% end %>
        <%= link_to admin_gotify_users_path, class: "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-base-content/60 hover:text-base-content/80 hover:border-base-content/20" do %>
          Users
        <% end %>
        <%= link_to admin_gotify_messages_path, class: "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-base-content/60 hover:text-base-content/80 hover:border-base-content/20" do %>
          Messages
        <% end %>
        <%= link_to admin_gotify_clients_path, class: "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-base-content/60 hover:text-base-content/80 hover:border-base-content/20" do %>
          Clients
        <% end %>
        <%= link_to admin_gotify_settings_path, class: "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-base-content/60 hover:text-base-content/80 hover:border-base-content/20" do %>
          Settings
        <% end %>
      </nav>
    </div>

    <h1 class="text-2xl font-bold text-base-content mb-6">Push Notifications Dashboard</h1>

    <!-- Flash Messages -->
    <% if flash[:success] %>
      <div class="alert alert-success mb-6">
        <p><%= flash[:success] %></p>
      </div>
    <% end %>
    <% if flash[:error] || flash[:alert] %>
      <div class="alert alert-error mb-6">
        <p><%= flash[:error] || flash[:alert] %></p>
      </div>
    <% end %>
    <% if flash[:warning] %>
      <div class="alert alert-warning mb-6">
        <p><%= flash[:warning] %></p>
      </div>
    <% end %>

    <!-- Connection Status Banner -->
    <% if @connected %>
      <div class="alert alert-success mb-6">
        <div class="flex items-center">
          <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <div class="flex-1">
            <p class="font-medium">Connected to Gotify Server</p>
            <p class="text-sm"><%= @gotify_url %></p>
          </div>
        </div>
      </div>
    <% else %>
      <div class="alert alert-error mb-6">
        <div class="flex items-center">
          <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <div class="flex-1">
            <p class="font-medium">Not Connected to Gotify Server</p>
            <p class="text-sm"><%= @connection_test[:message] %></p>
          </div>
          <%= link_to "Configure Settings", admin_gotify_settings_path, class: "ml-4 btn btn-error btn-sm" %>
        </div>
      </div>
    <% end %>

    <% if @connected %>
      <!-- Statistics Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Applications -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-base-content/80">Applications</p>
              <p class="text-3xl font-bold text-base-content mt-2"><%= @total_applications %></p>
            </div>
            <div class="p-3 bg-primary/20 rounded-lg">
              <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
          </div>
          <%= link_to "Manage Applications", admin_gotify_applications_path, class: "text-sm text-primary hover:text-primary-focus mt-4 inline-block" %>
        </div>

        <!-- Users -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-base-content/80">Users</p>
              <p class="text-3xl font-bold text-base-content mt-2"><%= @total_users %></p>
            </div>
            <div class="p-3 bg-success/20 rounded-lg">
              <svg class="h-8 w-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
          </div>
          <%= link_to "Manage Users", admin_gotify_users_path, class: "text-sm text-success hover:text-success mt-4 inline-block" %>
        </div>

        <!-- Clients -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-base-content/80">Client Tokens</p>
              <p class="text-3xl font-bold text-base-content mt-2"><%= @total_clients %></p>
            </div>
            <div class="p-3 bg-secondary/20 rounded-lg">
              <svg class="h-8 w-8 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
              </svg>
            </div>
          </div>
          <%= link_to "Manage Clients", admin_gotify_clients_path, class: "text-sm text-secondary hover:text-secondary-focus mt-4 inline-block" %>
        </div>

        <!-- Messages -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-base-content/80">Total Messages</p>
              <p class="text-3xl font-bold text-base-content mt-2"><%= @total_messages %></p>
            </div>
            <div class="p-3 bg-warning/20 rounded-lg">
              <svg class="h-8 w-8 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
              </svg>
            </div>
          </div>
          <%= link_to "View Messages", admin_gotify_messages_path, class: "text-sm text-warning hover:text-warning mt-4 inline-block" %>
        </div>
      </div>

      <!-- Recent Messages -->
      <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg">
        <div class="px-6 py-4 border-b border-base-content/10">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-base-content">Recent Messages</h2>
            <%= link_to "View All", admin_gotify_messages_path, class: "text-sm text-primary hover:text-primary-focus" %>
          </div>
        </div>

        <% if @recent_messages.any? %>
          <div class="divide-y divide-base-content/10">
            <% @recent_messages.each do |message| %>
              <% app = @applications.find { |a| a['id'] == message['appid'] } %>
              <div class="px-6 py-4 hover:bg-base-200">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center space-x-2 mb-1">
                      <span class="text-xs font-medium px-2 py-1 rounded-full <%= case message['priority']
                        when 0..3 then 'bg-base-200 text-base-content/80'
                        when 4..6 then 'bg-info/20 text-info'
                        when 7..8 then 'bg-warning/20 text-warning'
                        else 'bg-error/20 text-error'
                      end %>">
                        Priority <%= message['priority'] %>
                      </span>
                      <span class="text-xs text-base-content/60"><%= app&.dig('name') || "App ##{message['appid']}" %></span>
                    </div>
                    <% if message['title'].present? %>
                      <h3 class="text-sm font-medium text-base-content"><%= message['title'] %></h3>
                    <% end %>
                    <p class="text-sm text-base-content/80 mt-1"><%= message['message'] %></p>
                    <p class="text-xs text-base-content/60 mt-1"><%= Time.parse(message['date']).strftime('%B %d, %Y at %I:%M %p') rescue message['date'] %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <svg class="mx-auto h-12 w-12 text-base-content/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-base-content">No messages</h3>
            <p class="mt-1 text-sm text-base-content/60">No notifications have been sent yet.</p>
          </div>
        <% end %>
      </div>

      <!-- Quick Actions -->
      <div class="mt-8 bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold text-base-content mb-4">Quick Actions</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <%= link_to admin_gotify_applications_path, class: "flex items-center p-4 bg-base-200 border border-base-content/20 rounded-lg hover:border-primary hover:shadow-sm transition" do %>
            <svg class="h-8 w-8 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <div>
              <p class="font-medium text-base-content">Create Application</p>
              <p class="text-sm text-base-content/80">Generate new app token</p>
            </div>
          <% end %>

          <%= link_to admin_gotify_users_path, class: "flex items-center p-4 bg-base-200 border border-base-content/20 rounded-lg hover:border-success hover:shadow-sm transition" do %>
            <svg class="h-8 w-8 text-success mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
            <div>
              <p class="font-medium text-base-content">Add User</p>
              <p class="text-sm text-base-content/80">Create new Gotify user</p>
            </div>
          <% end %>

          <%= link_to admin_gotify_messages_path, class: "flex items-center p-4 bg-base-200 border border-base-content/20 rounded-lg hover:border-warning hover:shadow-sm transition" do %>
            <svg class="h-8 w-8 text-warning mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <div>
              <p class="font-medium text-base-content">Send Test Message</p>
              <p class="text-sm text-base-content/80">Test notifications</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Help Card -->
      <div class="mt-8 bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold text-base-content mb-3">Getting Started</h3>
        <div class="space-y-2 text-sm text-base-content/80">
          <p><strong>1. Create an Application:</strong> Generate application tokens for services that will send notifications</p>
          <p><strong>2. Configure Services:</strong> Use the application token to send notifications from Server Manager or external services</p>
          <p><strong>3. Create Users:</strong> Add users who can access Gotify web interface and mobile apps</p>
          <p><strong>4. Install Mobile App:</strong> Download Gotify app from App Store or Google Play to receive push notifications</p>
        </div>
        <div class="mt-4 flex items-center space-x-4">
          <a href="<%= @gotify_url %>" target="_blank" class="text-primary hover:text-primary-focus text-sm font-medium">
            Open Gotify Web UI
            <svg class="inline h-4 w-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
          <a href="https://gotify.net/docs/" target="_blank" class="text-primary hover:text-primary-focus text-sm font-medium">
            Documentation
            <svg class="inline h-4 w-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </div>
    <% else %>
      <!-- Setup Instructions when not connected -->
      <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-8">
        <h2 class="text-xl font-semibold text-base-content mb-4">Gotify Setup Required</h2>
        <p class="text-base-content/80 mb-6">Follow these steps to set up Gotify push notifications:</p>

        <div class="space-y-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/20 text-primary font-bold">1</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-base-content">Install Gotify Server</h3>
              <p class="mt-1 text-sm text-base-content/80">Run the installation script on your server:</p>
              <pre class="mt-2 p-3 bg-base-300 text-success rounded text-xs overflow-x-auto">sudo bash /path/to/server-manager/deployment/gotify/install-gotify-baremental.sh</pre>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/20 text-primary font-bold">2</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-base-content">Access Gotify Web Interface</h3>
              <p class="mt-1 text-sm text-base-content/80">Open your browser and navigate to:</p>
              <pre class="mt-2 p-3 bg-base-300 text-success rounded text-xs">http://localhost:8080</pre>
              <p class="mt-2 text-sm text-base-content/80">Login with default credentials: admin / admin</p>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/20 text-primary font-bold">3</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-base-content">Configure Server Manager</h3>
              <p class="mt-1 text-sm text-base-content/80">Enter your Gotify server details in the settings:</p>
              <%= link_to "Go to Settings", admin_gotify_settings_path, class: "mt-2 inline-block px-4 py-2 bg-primary text-white text-sm rounded-lg hover:bg-primary-focus" %>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/20 text-primary font-bold">4</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-base-content">Start Using</h3>
              <p class="mt-1 text-sm text-base-content/80">Once connected, manage applications, users, and messages from this interface.</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
