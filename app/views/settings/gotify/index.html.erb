<% content_for :head do %>
  <title>Gotify Push Notifications - <%= SystemSetting.company_name %></title>
<% end %>

<%= render layout: 'shared/sidebar' do %>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-base-content">Gotify Push Notifications</h1>
      <p class="mt-2 text-sm text-base-content/60">Configure push notifications for critical server events</p>
    </div>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="alert alert-success mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:error] %>
      <div class="alert alert-error mb-6">
        <%= flash[:error] %>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

      <!-- Left Column: Configuration -->
      <div class="lg:col-span-2 space-y-6">

        <!-- Connection Status -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-base-content">Connection Status</h2>
            <% if @gotify_enabled[:value] %>
              <span class="badge badge-success">
                <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Enabled
              </span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-base-100 text-base-content">
                <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                Disabled
              </span>
            <% end %>
          </div>

          <% if @gotify_url[:value].present? %>
            <div class="space-y-2 text-sm">
              <div class="flex items-center">
                <span class="text-base-content/60 w-32">Server URL:</span>
                <code class="bg-base-100 px-2 py-1 rounded text-base-content"><%= @gotify_url[:value] %></code>
              </div>
              <div class="flex items-center">
                <span class="text-base-content/60 w-32">App Token:</span>
                <span class="text-base-content">
                  <% if @app_token_configured %>
                    <span class="text-success">Configured</span>
                  <% else %>
                    <span class="text-error">Not configured</span>
                  <% end %>
                </span>
              </div>
            </div>
          <% else %>
            <p class="text-sm text-base-content/60">Not configured yet</p>
          <% end %>

          <div class="mt-4">
            <button id="test-connection-btn"
                    onclick="testConnection()"
                    class="btn btn-primary w-full"
                    <%= 'disabled' unless @gotify_enabled[:value] && @app_token_configured %>>
              Test Connection
            </button>
            <div id="test-result" class="mt-3 hidden"></div>
          </div>
        </div>

        <!-- Configuration Form -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-base-content mb-4">Configuration</h2>

          <%= form_with url: settings_gotify_path, method: :patch, class: "space-y-4" do |f| %>

            <!-- Enable/Disable Toggle -->
            <div>
              <label class="flex items-center cursor-pointer">
                <%= check_box_tag :gotify_enabled, '1', @gotify_enabled[:value],
                    class: "checkbox checkbox-primary" %>
                <span class="ml-2 text-sm font-medium text-base-content">Enable Gotify Notifications</span>
              </label>
              <p class="mt-1 text-sm text-base-content/60">
                When enabled, critical events will trigger push notifications
              </p>
            </div>

            <!-- Gotify URL -->
            <div>
              <label class="block text-sm font-medium text-base-content/80 mb-2">
                Gotify Server URL
              </label>
              <%= text_field_tag :gotify_url, @gotify_url[:value],
                  placeholder: "http://notify.example.com or http://server-ip:8080",
                  class: "input input-bordered w-full" %>
              <p class="mt-1 text-sm text-base-content/60">
                The URL of your Gotify server (without trailing slash)
              </p>
            </div>

            <!-- App Token -->
            <div>
              <label class="block text-sm font-medium text-base-content/80 mb-2">
                Application Token
              </label>
              <%= password_field_tag :gotify_app_token, '',
                  placeholder: @app_token_configured ? "Token already configured (leave blank to keep)" : "Enter your Gotify app token",
                  class: "input input-bordered w-full" %>
              <p class="mt-1 text-sm text-base-content/60">
                Create an application in Gotify and paste the token here (stored encrypted)
              </p>
            </div>

            <div class="flex justify-end">
              <%= f.submit "Save Configuration",
                  class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>

        <!-- Notification Types -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-base-content mb-4">Notification Types</h2>

          <div class="space-y-3 text-sm">
            <div class="flex items-start">
              <div class="flex-shrink-0 h-5 w-5 text-error">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="font-medium text-base-content">Critical CVE Alerts</p>
                <p class="text-base-content/60">High/critical severity vulnerabilities detected on servers</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0 h-5 w-5 text-error">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="font-medium text-base-content">Backup Failures</p>
                <p class="text-base-content/60">Failed backup operations requiring attention</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0 h-5 w-5 text-warning">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="font-medium text-base-content">Server Status Changes</p>
                <p class="text-base-content/60">Servers going offline or experiencing errors</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0 h-5 w-5 text-warning">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="font-medium text-base-content">Task Failures</p>
                <p class="text-base-content/60">Scheduled task executions that fail</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0 h-5 w-5 text-info">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="font-medium text-base-content">User Management Events</p>
                <p class="text-base-content/60">User creation, role changes, 2FA enablement</p>
              </div>
            </div>
          </div>
        </div>

      </div>

      <!-- Right Column: Statistics & Recent Notifications -->
      <div class="space-y-6">

        <!-- Statistics -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <h3 class="text-lg font-semibold text-base-content mb-4">Statistics</h3>

          <div class="space-y-3">
            <div>
              <div class="flex justify-between text-sm mb-1">
                <span class="text-base-content/60">Success Rate</span>
                <span class="font-medium text-base-content"><%= @statistics[:success_rate] %>%</span>
              </div>
              <div class="w-full bg-base-200 rounded-full h-2">
                <div class="bg-success h-2 rounded-full" style="width: <%= @statistics[:success_rate] %>%"></div>
              </div>
            </div>

            <div class="border-t border-base-content/10 pt-3 space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-base-content/60">Total Sent</span>
                <span class="font-medium text-base-content"><%= @statistics[:total_sent] %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-base-content/60">Failed</span>
                <span class="font-medium text-error"><%= @statistics[:total_failed] %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-base-content/60">Today</span>
                <span class="font-medium text-base-content"><%= @statistics[:notifications_today] %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-base-content/60">This Week</span>
                <span class="font-medium text-base-content"><%= @statistics[:notifications_this_week] %></span>
              </div>
            </div>

            <% if @statistics[:last_notification] %>
              <div class="border-t border-base-content/10 pt-3">
                <p class="text-xs text-base-content/60">Last notification</p>
                <p class="text-sm font-medium text-base-content">
                  <%= time_ago_in_words(@statistics[:last_notification]) %> ago
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Recent Notifications -->
        <div class="bg-base-200 border border-base-content/10 rounded-lg shadow-lg p-6">
          <h3 class="text-lg font-semibold text-base-content mb-4">Recent Notifications</h3>

          <% if @recent_notifications.any? %>
            <div class="space-y-3">
              <% @recent_notifications.each do |notification| %>
                <div class="border-l-4 <%= notification.status == 'sent' ? 'border-success' : 'border-error' %> pl-3 py-2">
                  <div class="flex items-start justify-between">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-base-content truncate">
                        <%= notification.title %>
                      </p>
                      <p class="text-xs text-base-content/60 mt-1">
                        <%= notification.notification_type.humanize %>
                      </p>
                      <p class="text-xs text-base-content/60 mt-1">
                        <%= time_ago_in_words(notification.created_at) %> ago
                      </p>
                    </div>
                    <% if notification.status == 'sent' %>
                      <svg class="w-5 h-5 text-success flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                    <% else %>
                      <svg class="w-5 h-5 text-error flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-base-content/60">No notifications sent yet</p>
          <% end %>
        </div>

        <!-- Info Box -->
        <div class="bg-base-200 border border-primary rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-primary/80">
                <strong>Need Help?</strong><br>
                See the <a href="<%= docs_path %>" class="underline">documentation</a> for Gotify server setup and Android app configuration.
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>

  <script>
    function testConnection() {
      const btn = document.getElementById('test-connection-btn');
      const resultDiv = document.getElementById('test-result');

      btn.disabled = true;
      btn.textContent = 'Testing...';
      resultDiv.classList.add('hidden');

      fetch('<%= test_connection_settings_gotify_path %>', {
        method: 'POST',
        headers: {
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
          'Content-Type': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        resultDiv.classList.remove('hidden');
        if (data.success) {
          resultDiv.className = 'alert alert-success mt-3 text-sm';
          resultDiv.textContent = data.message;
        } else {
          resultDiv.className = 'alert alert-error mt-3 text-sm';
          resultDiv.textContent = data.message;
        }
      })
      .catch(error => {
        resultDiv.classList.remove('hidden');
        resultDiv.className = 'alert alert-error mt-3 text-sm';
        resultDiv.textContent = 'Connection test failed: ' + error.message;
      })
      .finally(() => {
        btn.disabled = false;
        btn.textContent = 'Test Connection';
      });
    }
  </script>
<% end %>
