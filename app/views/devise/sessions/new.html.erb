<% content_for :head do %>
  <title>Sign In - Veracity</title>
<% end %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <!-- Header with Veracity Logo -->
      <div class="text-center">
        <div class="flex justify-center mb-6">
          <!-- SALT Crystal V Logo - Large -->
          <div class="bg-base-200 rounded-2xl p-6 shadow-xl transform hover:scale-105 transition-transform">
            <svg width="120" height="120" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
              <defs>
                <linearGradient id="saltGradLogin" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" stop-color="#00C4CC" />
                  <stop offset="100%" stop-color="#0099CC" />
                </linearGradient>
              </defs>
              <!-- Outer hexagonal rings - crystal structure -->
              <path d="M 100 20 L 150 50 L 150 110 L 100 140 L 50 110 L 50 50 Z" stroke="#00C4CC" stroke-width="3" fill="none" opacity="0.4"/>
              <path d="M 100 30 L 140 55 L 140 105 L 100 130 L 60 105 L 60 55 Z" stroke="#00C4CC" stroke-width="3" fill="none" opacity="0.6"/>
              <!-- Hexagonal facets creating depth -->
              <path d="M 100 30 L 140 55 L 100 80 Z" fill="#00C4CC" opacity="0.15"/>
              <path d="M 100 30 L 60 55 L 100 80 Z" fill="#00C4CC" opacity="0.2"/>
              <!-- V shape integrated with crystal geometry -->
              <path d="M 70 65 L 100 115 L 130 65" stroke="url(#saltGradLogin)" stroke-width="10" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
              <!-- Verification checkmark in crystalline style -->
              <path d="M 88 105 L 100 115 L 122 88" stroke="#57D9A3" stroke-width="7" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
              <!-- Inner hexagon - core -->
              <path d="M 100 85 L 115 95 L 115 110 L 100 120 L 85 110 L 85 95 Z" stroke="#57D9A3" stroke-width="2" fill="#57D9A3" opacity="0.25"/>
              <!-- Crystalline corner details -->
              <path d="M 50 50 L 45 53 L 48 58" stroke="#0099CC" stroke-width="2" opacity="0.5"/>
              <path d="M 150 50 L 155 53 L 152 58" stroke="#0099CC" stroke-width="2" opacity="0.5"/>
              <path d="M 100 140 L 95 143 L 100 148" stroke="#0099CC" stroke-width="2" opacity="0.5"/>
            </svg>
          </div>
        </div>
        <h2 class="text-4xl font-extrabold text-white" style="font-family: 'Inter', sans-serif;">
          VERACITY
        </h2>
        <p class="mt-3 text-base text-base-content/80">
          Server Infrastructure Management
        </p>
      </div>

      <!-- Login Card -->
      <div class="bg-base-200 rounded-2xl shadow-2xl p-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-base-content mb-1" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                </svg>
              </div>
              <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  placeholder: "admin@devsec.ie",
                  required: true,
                  class: "input input-bordered w-full pl-10" %>
            </div>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-base-content mb-1" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <%= f.password_field :password,
                  autocomplete: "current-password",
                  placeholder: "••••••••",
                  required: true,
                  class: "input input-bordered w-full pl-10" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
                <%= f.label :remember_me, class: "ml-2 block text-sm text-base-content" %>
              </div>
              <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-primary hover:text-primary/80" %>
              <% end %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Sign in", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <!-- Additional Links -->
        <div class="mt-6 text-center">
          <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <p class="text-sm text-base-content/80">
              Don't have an account?
              <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-primary hover:text-primary/80" %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Footer -->
      <div class="text-center">
        <p class="text-xs text-base-content/60">
          <%= SystemSetting.company_name %>
        </p>
      </div>
    </div>
  </div>
