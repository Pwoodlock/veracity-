<% content_for :head do %>
  <title>Snapshots - <%= @server.hostname %> - Server Manager</title>
<% end %>

<!-- Shared Navigation -->
<%= render 'shared/navigation' %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Header -->
    <div class="bg-base-200 rounded-lg shadow p-6 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-base-content">Hetzner Cloud Snapshots</h1>
          <p class="mt-1 text-sm text-base-content/80">
            Server: <span class="font-semibold"><%= @server.hostname %></span>
          </p>
        </div>
        <div>
          <%= link_to server_path(@server), class: "inline-flex items-center px-4 py-2 border border-base-content/10 rounded-lg text-base-content text-sm font-medium hover:bg-base-300 transition" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Server
          <% end %>
        </div>
      </div>
    </div>

  <!-- Snapshots List -->
  <div class="bg-base-200 shadow overflow-hidden sm:rounded-lg">
    <% if @snapshots.any? %>
      <ul class="divide-y divide-base-content/10">
        <% @snapshots.each do |snapshot| %>
          <li class="px-6 py-4 hover:bg-base-300">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-3">
                  <!-- Snapshot Icon -->
                  <div class="flex-shrink-0">
                    <svg class="h-10 w-10 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>

                  <!-- Snapshot Details -->
                  <div class="flex-1">
                    <div class="flex items-center space-x-2">
                      <h3 class="text-sm font-medium text-base-content truncate">
                        <%= snapshot[:description] %>
                      </h3>
                      <% if snapshot[:status] == 'available' %>
                        <span class="badge badge-success badge-sm">
                          Available
                        </span>
                      <% elsif snapshot[:status] == 'creating' %>
                        <span class="badge badge-primary badge-sm">
                          Creating...
                        </span>
                      <% else %>
                        <span class="badge badge-ghost badge-sm">
                          <%= snapshot[:status] %>
                        </span>
                      <% end %>
                    </div>

                    <div class="mt-2 flex items-center space-x-4 text-sm text-base-content/40">
                      <div class="flex items-center">
                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        ID: <%= snapshot[:snapshot_id] %>
                      </div>

                      <div class="flex items-center">
                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <%= Time.parse(snapshot[:created]).strftime('%Y-%m-%d %H:%M') rescue snapshot[:created] %>
                      </div>

                      <% if snapshot[:size_gb] %>
                        <div class="flex items-center">
                          <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                          </svg>
                          <%= "%.2f GB" % snapshot[:size_gb] %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Actions -->
              <div class="flex-shrink-0 ml-4">
                <%= button_to delete_hetzner_snapshot_server_path(@server, snapshot_id: snapshot[:snapshot_id]),
                              method: :delete,
                              class: "btn btn-error btn-sm",
                              data: { confirm: "Are you sure you want to delete snapshot #{snapshot[:snapshot_id]}? This action cannot be undone." } do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  Delete
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-base-content">No snapshots found</h3>
        <p class="mt-1 text-sm text-base-content/40">
          This server has no Hetzner Cloud snapshots yet.
        </p>
        <div class="mt-6">
          <%= link_to "â† Back to Server", server_path(@server), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

    <!-- Info Box -->
    <div class="mt-6 bg-base-200 border border-primary rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm text-primary/80">
            <strong>Note:</strong> These are all snapshots in your Hetzner Cloud project.
            Automatic snapshots are created before weekly system updates if enabled.
            The system keeps the last 3 snapshots and automatically deletes older ones.
          </p>
        </div>
      </div>
    </div>

  </div>
