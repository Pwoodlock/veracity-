# =============================================================================
# ENVIRONMENT AND SECRETS
# =============================================================================
# All environment files (development, production, test)
.env
.env.*
.env.local
.env.production
.env.development
.env.test

# Rails credentials and master key
/config/master.key
/config/credentials/*.key

# Database configuration with passwords
/config/database.yml.local

# =============================================================================
# BUNDLER
# =============================================================================
/.bundle
/vendor/bundle
.bundle/

# =============================================================================
# RAILS TEMPORARY FILES
# =============================================================================
# Logs
/log/*
!/log/.keep

# Temporary files
/tmp/*
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep
/tmp/cache/*
!/tmp/cache/
!/tmp/cache/.keep

# Storage (uploaded files)
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

